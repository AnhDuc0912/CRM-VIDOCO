{
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "doubleQuote": false,
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 80,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "quoteProps": "as-needed",
    "jsxSingleQuote": true,
    "bracketSameLine": false,
    "singleAttributePerLine": false,
    "htmlWhitespaceSensitivity": "css",
    "vueIndentScriptAndStyle": false,
    "embeddedLanguageFormatting": "auto",
    "proseWrap": "preserve",
    "overrides": [
        {
            "files": "*.blade.php",
            "options": {
                "parser": "html",
                "tabWidth": 4,
                "printWidth": 80,
                "htmlWhitespaceSensitivity": "ignore"
            }
        },
        {
            "files": "*.php",
            "options": {
                "parser": "php",
                "tabWidth": 4,
                "printWidth": 80
            }
        },
        {
            "files": [
                "*.js",
                "*.jsx",
                "*.ts",
                "*.tsx"
            ],
            "options": {
                "tabWidth": 2,
                "singleQuote": true,
                "trailingComma": "es5"
            }
        },
        {
            "files": "*.vue",
            "options": {
                "tabWidth": 2,
                "singleQuote": true
            }
        },
        {
            "files": "*.json",
            "options": {
                "tabWidth": 2,
                "trailingComma": "none"
            }
        },
        {
            "files": "*.css",
            "options": {
                "tabWidth": 2,
                "singleQuote": false
            }
        },
        {
            "files": "*.scss",
            "options": {
                "tabWidth": 2,
                "singleQuote": false
            }
        }
    ]
}
